<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splash" />

    <TextView
        android:text="Please wait loading initial data...."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_splash_screen_loading_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:textColor="#000000"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/x_splash_screen_progress_bar"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/x_splash_screen_loading_text"
        android:layout_toStartOf="@+id/x_splash_screen_loading_text"
        android:paddingBottom="4dp"/>
</RelativeLayout>