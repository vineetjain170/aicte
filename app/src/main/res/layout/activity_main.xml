<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/x_double_navigation_drawer_layout_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.vscholars.stack2code.aicte_phaseone.MainActivity">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/x_activity_main_marquee"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textAppearance="@android:style/TextAppearance.Material"
                    android:textStyle="normal|bold"
                    android:textColor="#f75700"
                    android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/tab_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_1_bg"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_total_institutes"
                            android:id="@+id/x_activity_main_total_institutions_img" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="10dp"
                            android:gravity="center"
                            android:text="Total Institutions"
                            android:textColor="#fff"
                            android:textSize="12dp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/x_activity_main_total_institutions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:background="#ccd1d1">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_faculties"
                            android:id="@+id/x_activity_main_faculties_img" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/x_activity_main_total_institutions"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:text="Faculties"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/x_activity_main_faculties"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView3"
                            android:layout_alignStart="@+id/textView3"
                            android:layout_below="@+id/textView3"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:weightSum="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/tab_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@color/colorAccent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_enrollment"
                            android:id="@+id/x_activity_main_enrolment_img" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/x_activity_main_total_intake"
                            android:layout_alignRight="@+id/x_activity_main_total_intake"
                            android:layout_below="@+id/x_activity_main_total_intake"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:text="Enrollment"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:textStyle="normal|bold" />


                        <TextView
                            android:id="@+id/x_activity_main_enrollment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/textView7"
                            android:layout_alignRight="@+id/textView7"
                            android:layout_below="@+id/textView7"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="#ffffff"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/tab_5"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/tab_5_bg"
                        android:padding="20dp"
                        >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_students_passed"
                            android:id="@+id/x_activity_main_student_passed_img" />

                        <TextView
                            android:text="Students Passed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:layout_below="@+id/x_activity_main_enrollment"
                            android:layout_alignRight="@+id/textView5"
                            android:layout_alignEnd="@+id/textView5"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:paddingTop="10dp"
                            android:textColor="#fff"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/x_activity_main_student_passed"
                            android:layout_below="@+id/textView9"
                            android:layout_alignRight="@+id/textView9"
                            android:layout_alignEnd="@+id/textView9"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="20dp"/>
                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:weightSum="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/tab_6"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/tab_3_bg"
                        android:padding="20dp"                 >

                        <ImageView
                            android:id="@+id/x_activity_main_placements_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_placement" />

                        <TextView
                            android:text="Placement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_below="@+id/x_activity_main_student_passed"
                            android:layout_alignLeft="@+id/x_activity_main_enrollment"
                            android:layout_alignStart="@+id/x_activity_main_enrollment"
                            android:freezesText="true"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:paddingTop="10dp"
                            android:textSize="12dp"
                            android:textStyle="normal|bold"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView11"
                            android:layout_alignLeft="@+id/textView11"
                            android:layout_alignStart="@+id/textView11"
                            android:id="@+id/x_activity_main_placement"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/tab_3"
                        android:padding="20dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_2_bg"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_total_intake"
                            android:id="@+id/x_activity_main_total_intake_img" />
                        <TextView
                            android:text="Total Intake"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:id="@+id/textView5"
                            android:layout_below="@+id/x_activity_main_faculties"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:textSize="12dp"
                            android:textStyle="normal|bold"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_below="@+id/textView5"
                            android:layout_alignLeft="@+id/textView5"
                            android:layout_alignStart="@+id/textView5"
                            android:id="@+id/x_activity_main_total_intake"
                            android:gravity="center"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tab_7"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/tab_4_bg"
                        android:padding="20dp"                 >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_new_institutes"
                            android:id="@+id/x_activity_main_new_institutes_img" />

                        <TextView
                            android:text="New Institutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:freezesText="true"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:paddingTop="10dp"
                            android:textSize="12dp"
                            android:textStyle="normal|bold"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/x_activity_main_new_institutes"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/tab_8"
                        android:padding="20dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_7_bg"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_closed_institutions"
                            android:id="@+id/x_activity_main_closed_institutes_img" />
                        <TextView
                            android:text="Closed Institutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:textSize="12dp"
                            android:textStyle="normal|bold"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:id="@+id/x_activity_main_closed_institutes"
                            android:gravity="center"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/x_custom_action_bar_layout_filter_drawer"
            app:backgroundTint="#f75700"
            android:src="@drawable/funnel" />
    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#F75700"
            android:orientation="vertical"
            android:id="@+id/nav_main_header"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/splash"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

        <ListView android:id="@+id/x_double_navigation_drawer_layout_main_drawer"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:background="#fff"
            android:layout_below="@id/nav_main_header"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#ffffff">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nav_header_filter"
            android:background="#ffffff">

            <TextView
                android:text="Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView53"
                android:gravity="center"
                android:textSize="20dp"
                android:padding="5dp"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <ExpandableListView android:id="@+id/x_double_navigation_drawer_layout_filter_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"
            android:background="#ffffff"
            android:childDivider="#ffffff"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_below="@id/nav_header_filter"/>

    </RelativeLayout>



</android.support.v4.widget.DrawerLayout>