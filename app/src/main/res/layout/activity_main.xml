<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/x_double_navigation_drawer_layout_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.vscholars.stack2code.aicte_phaseone.MainActivity">

            <LinearLayout
                android:id="@+id/tab_1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_1_bg"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">
                <TextView
                    android:text="Total Institutions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"

                    android:id="@+id/textView"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="12dp" />
                <TextView
                    android:text="TextView"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/x_activity_main_total_institutions"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_2"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_2_bg"
                android:padding="20dp"
                android:layout_below="@+id/tab_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:text="Faculties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/x_activity_main_total_institutions"
                    android:id="@+id/textView3"
                    android:textColor="#a94442"
                    android:gravity="center"
                    android:textSize="12dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:id="@+id/x_activity_main_faculties"
                    android:gravity="center"
                    android:textColor="#a94442"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/tab_4"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/tab_4_bg"
                android:layout_below="@+id/tab_2"
                android:layout_alignRight="@+id/tab_1"
                android:layout_alignEnd="@+id/tab_1">
                <TextView
                    android:text="Enrollment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/x_activity_main_total_intake"
                    android:layout_alignRight="@+id/x_activity_main_total_intake"
                    android:layout_alignEnd="@+id/x_activity_main_total_intake"
                    android:id="@+id/textView7"
                    android:gravity="center"
                    android:textColor="#3c763d"
                    android:textSize="12dp" />


                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7"
                    android:layout_alignRight="@+id/textView7"
                    android:layout_alignEnd="@+id/textView7"
                    android:id="@+id/x_activity_main_enrollment"
                    android:gravity="center"
                    android:textColor="#3c763d"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/tab_5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/tab_5_bg"
                android:padding="20dp"
                android:layout_below="@+id/tab_4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">
                <TextView
                    android:text="Students Passed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/x_activity_main_enrollment"
                    android:layout_alignRight="@+id/textView5"
                    android:layout_alignEnd="@+id/textView5"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="#fff"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/x_activity_main_student_passed"
                    android:layout_below="@+id/textView9"
                    android:layout_alignRight="@+id/textView9"
                    android:layout_alignEnd="@+id/textView9"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/tab_6"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/tab_6_bg"
                android:padding="20dp"
                android:layout_below="@+id/tab_3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:text="Placement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/x_activity_main_student_passed"
                    android:layout_alignLeft="@+id/x_activity_main_enrollment"
                    android:layout_alignStart="@+id/x_activity_main_enrollment"
                    android:freezesText="true"
                    android:gravity="center"
                    android:textColor="#31708f"
                    android:textSize="12dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView11"
                    android:layout_alignLeft="@+id/textView11"
                    android:layout_alignStart="@+id/textView11"
                    android:id="@+id/x_activity_main_placement"
                    android:gravity="center"
                    android:textColor="#31708f"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/tab_3"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_3_bg"
                android:orientation="vertical"
                android:layout_below="@+id/tab_5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">
                <TextView
                    android:text="Total Intake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/x_activity_main_faculties"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textSize="12dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:id="@+id/x_activity_main_total_intake"
                    android:gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <ListView android:id="@+id/x_double_navigation_drawer_layout_main_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:background="#ffffff"/>

    <ExpandableListView android:id="@+id/x_double_navigation_drawer_layout_filter_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:background="#ffffff"
        android:childDivider="#ffffff"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"/>

</android.support.v4.widget.DrawerLayout>