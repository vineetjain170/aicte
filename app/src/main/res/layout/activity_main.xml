<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/x_double_navigation_drawer_layout_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
 
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.vscholars.stack2code.aicte_phaseone.MainActivity">


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tab_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_1_bg"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dash_total_institutions" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:text="Total Institutions"
                        android:textColor="#fff"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/x_activity_main_total_institutions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="#fff"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_2_bg"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dash_faculties" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/x_activity_main_total_institutions"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="Faculties"
                        android:textColor="#a94442"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/x_activity_main_faculties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_below="@+id/textView3"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="#a94442"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/tab_4"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/tab_4_bg"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dash_enrollment"
                        />

                    <TextView
                        android:text="Enrollment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/x_activity_main_total_intake"
                        android:layout_alignRight="@+id/x_activity_main_total_intake"
                        android:layout_alignEnd="@+id/x_activity_main_total_intake"
                        android:id="@+id/textView7"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textColor="#3c763d"
                        android:textSize="12dp" />


                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_alignRight="@+id/textView7"
                        android:layout_alignEnd="@+id/textView7"
                        android:id="@+id/x_activity_main_enrollment"
                        android:gravity="center"
                        android:textColor="#3c763d"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/tab_5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/tab_5_bg"
                    android:padding="20dp"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dash_students_passed"/>

                    <TextView
                        android:text="Students Passed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_below="@+id/x_activity_main_enrollment"
                        android:layout_alignRight="@+id/textView5"
                        android:layout_alignEnd="@+id/textView5"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:paddingTop="10dp"
                        android:textColor="#fff"/>

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/x_activity_main_student_passed"
                        android:layout_below="@+id/textView9"
                        android:layout_alignRight="@+id/textView9"
                        android:layout_alignEnd="@+id/textView9"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="20dp"/>
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/tab_6"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/tab_6_bg"
                    android:padding="20dp"                 >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dash_placement" />

                    <TextView
                        android:text="Placement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_below="@+id/x_activity_main_student_passed"
                        android:layout_alignLeft="@+id/x_activity_main_enrollment"
                        android:layout_alignStart="@+id/x_activity_main_enrollment"
                        android:freezesText="true"
                        android:gravity="center"
                        android:textColor="#31708f"
                        android:paddingTop="10dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView11"
                        android:layout_alignLeft="@+id/textView11"
                        android:layout_alignStart="@+id/textView11"
                        android:id="@+id/x_activity_main_placement"
                        android:gravity="center"
                        android:textColor="#31708f"
                        android:textSize="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/tab_3"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tab_3_bg"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/dash_total_intake"/>
                    <TextView
                        android:text="Total Intake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:id="@+id/textView5"
                        android:layout_below="@+id/x_activity_main_faculties"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textSize="12dp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:layout_below="@+id/textView5"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_alignStart="@+id/textView5"
                        android:id="@+id/x_activity_main_total_intake"
                        android:gravity="center"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/funnel"
            android:id="@+id/x_custom_action_bar_layout_filter_drawer"/>
        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>

    <ListView android:id="@+id/x_double_navigation_drawer_layout_main_drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:background="@drawable/tab_6_bg"/>

    <ExpandableListView android:id="@+id/x_double_navigation_drawer_layout_filter_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:background="#ffffff"
        android:childDivider="#ffffff"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"/>

</android.support.v4.widget.DrawerLayout>