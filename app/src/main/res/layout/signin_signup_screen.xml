<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/x_signin_signup_screen_email"
        android:hint="Email or Phone"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <Button
        android:text="Sign In"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/x_signin_signup_screen_login"
        android:background="@android:color/holo_orange_dark"
        android:textColor="#ffffff"
        android:layout_below="@+id/x_signin_signup_screen_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo_mhrd"
        android:id="@+id/imageView3"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/x_signin_signup_screen_email"
        android:layout_alignStart="@+id/x_signin_signup_screen_email" />

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView2"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="NOT A MEMBER? JOIN NOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/x_signin_signup_screen_signup"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@+id/x_signin_signup_screen_login"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/x_signin_signup_screen_signup"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light"
            android:id="@+id/imageView5" />

        <TextView
            android:text="Sign In With Google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textStyle="normal|bold"
            android:textColor="?attr/actionModeSplitBackground" />
    </RelativeLayout>
</RelativeLayout>
